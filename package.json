{
  "name": "@three-broke-girls/cerebro",
  "version": "1.0.0",
  "description": "A CLI tool for managing AGENT.md and CLAUDE.md files with reusable template sections",
  "main": "src/index.js",
  "bin": {
    "cerebro": "./src/cli.js"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "dev": "node src/cli.js",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "ci": "yarn lint && yarn test"
  },
  "keywords": ["cli", "agent", "claude", "ai", "markdown", "templates", "agent-md", "claude-md", "documentation"],
  "author": "three-broke-girls",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jon-greeff-katsini/cerebro.git"
  },
  "homepage": "https://github.com/jon-greeff-katsini/cerebro#readme",
  "bugs": {
    "url": "https://github.com/jon-greeff-katsini/cerebro/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "src/",
    "templates/",
    "README.md",
    "CLAUDE.md",
    "LICENSE"
  ],
  "dependencies": {
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"]
  }
}